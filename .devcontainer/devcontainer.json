{
  "name": "In-Class Examples (Python Only)",

  // Use a Python dev container image
  "image": "mcr.microsoft.com/devcontainers/python:3.11",

  // Automatically install dependencies listed in requirements.txt
  "postCreateCommand": "pip install --no-cache-dir -r requirements.txt",

  // Forward a port for Jupyter or other servers
  "forwardPorts": [8888],

  // Add VS Code extensions for Python and Jupyter
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-toolsai.jupyter"
      ]
    }
  }
}
